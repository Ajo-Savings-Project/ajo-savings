{
  "name": "my-turborepo",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md,scss,css}\"",
    "test": "turbo test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@repo/typescript-config": "*",
    "prettier": "^3.1.0",
    "turbo": "latest",
    "husky": "^8.0.3"
  },
  "packageManager": "yarn@1.22.19",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "lint-staged": {
    "*.{css,scss}": [
      "prettier --ignore-unknown --write"
    ],
    "*.{ts,tsx,js,jsx}": [
      "eslint --fix",
      "prettier --ignore-unknown --write"
    ]
  },
  "engines": {
    "node": ">=18.x",
    "yarn": ">1.x || <=2"
  }
}
